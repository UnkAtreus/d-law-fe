{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      // "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@baseComponents/*": ["bases/*"],
      "@pages/*": ["pages/*"],  
      "@styles/*": ["styles/*"],  
      "@assets/*": ["assets/*"],  
      "@services/*": ["services/*"],  
      "@utilities/*": ["utilities/*"],  
      "@locales/*": ["locales/*"],  
      "@interfaces/*": ["interfaces/*"],  
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "prettier.config.js"],
  "exclude": ["node_modules"]
}
